{
  "name": "stealth-automation",
  "version": "1.0.0",
  "description": "Playwright Stealth Automation with Electron Desktop App",
  "type": "module",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "concurrently -k \"npm run server\" \"npm run client\" \"wait-on tcp:5180 tcp:3005 && npx electron .\"",
    "dev:web": "concurrently \"npm run server\" \"npm run client\"",
    "server": "tsx watch src/server/index.ts",
    "client": "vite",
    "build": "vite build",
    "start": "tsx src/server/index.ts",
    "electron": "concurrently \"npm run server\" \"npm run client\" \"wait-on tcp:5180 tcp:3005 && npx electron .\"",
    "electron:only": "npx electron .",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "playwright": "^1.41.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "pusher-js": "^8.4.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "zca-js": "^2.0.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.24",
    "concurrently": "^8.2.2",
    "electron": "^33.4.11",
    "electron-builder": "^26.7.0",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^9.0.3"
  }
}